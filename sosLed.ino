void setup() {
    
  pinMode(7, OUTPUT);
  
}

void loop() {
  digitalWrite(7, HIGH); //letra S
  delay(200);
  digitalWrite(7, LOW);
  delay(200);
  digitalWrite(7, HIGH);
  delay(200);
  digitalWrite(7, LOW);
  delay(200);
  digitalWrite(7, HIGH);
  delay(200);
  
  digitalWrite(7, LOW); //delay entre códigos
  delay(1000);

  digitalWrite(7, HIGH); //letra o
  delay(800);
  digitalWrite(7, LOW);
  delay(800);
  digitalWrite(7, HIGH);
  delay(800);
  digitalWrite(7, LOW);
  delay(800);
  digitalWrite(7, HIGH);
  delay(800);

  digitalWrite(7, LOW); //delay entre códigos
  delay(1000);

  digitalWrite(7, HIGH); //letra S
  delay(200);
  digitalWrite(7, LOW);
  delay(200);
  digitalWrite(7, HIGH);
  delay(200);
  digitalWrite(7, LOW);
  delay(200);
  digitalWrite(7, HIGH);
  delay(200);
  
  digitalWrite(7, LOW); //delay entre códigos
  delay(3000);

   
}